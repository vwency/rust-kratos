{
  "name": "rust-gateway",
  "targets": {
    "infra-up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d"
      }
    },
    "infra-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose down -v"
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run my-app:infra-up && nx run my-app:run"
      }
    }
  }
}
